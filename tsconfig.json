{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"], // Incluyendo la carpeta de tipos personalizados
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src//", "./api/.ts"],
  "exclude": ["node_modules","build"]
}
